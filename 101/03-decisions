## switch
var fruit = 'car';

switch (fruit) {
  case 'plum':
  console.log(`${fruit} costs $12 a kilo`)
  break;
  
  case 'peach':
  case 'watermelon':
  console.log(5+6);
  break;
  
  default:
  console.log('this is the defeault');  
}
